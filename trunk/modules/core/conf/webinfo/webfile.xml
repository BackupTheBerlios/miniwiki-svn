<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <display-name>MiniWiki</display-name>
  <description>
      MiniWiki Web Application.
  </description>

  <servlet>
      <servlet-name>org.tmjee.miniwiki.server.UiUiLoadTemplateServiceImpl</servlet-name>
      <servlet-class>org.tmjee.miniwiki.server.UiUiLoadTemplateServiceImpl</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>org.tmjee.miniwiki.server.UserManagementServiceImpl</servlet-name>
      <servlet-class>org.tmjee.miniwiki.server.UserManagementServiceImpl</servlet-class>
  </servlet>


  <servlet-mapping>
      <servlet-name>org.tmjee.miniwiki.server.UiUiLoadTemplateServiceImpl</servlet-name>
      <url-pattern>/org.tmjee.miniwiki.MiniWiki/loadTemplate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>org.tmjee.miniwiki.server.UserManagementServiceImpl</servlet-name>
      <url-pattern>/org.tmjee.miniwiki.MiniWiki/userManagement</url-pattern>
  </servlet-mapping>

</web-app>
